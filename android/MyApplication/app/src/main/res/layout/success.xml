<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rrrr"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:background="@drawable/layout_border"
    tools:context="com.example.chun.whefe.SuccessActivity">

    <ImageView
        android:id="@+id/noti_phoneView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        app:srcCompat="@drawable/smartphone" />

    <Button
        android:id="@+id/noti_OKButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="onOKButtonClicked"
        android:text="확인" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_orange_dark">

        <ImageView
            android:id="@+id/noti_iconView"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:visibility="visible"
            app:srcCompat="@drawable/whefe" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:text="주문이 완성되었습니다!!"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>
