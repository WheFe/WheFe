<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.example.chun.whefe.SignupActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:id="@+id/relativeLayout2">

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout3"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1.05"
                android:gravity="center_vertical"
                android:text="비밀번호"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/LPassEdit"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.29"
                android:ems="10"
                android:gravity="center"
                android:hint="6~10자"
                android:inputType="textPassword"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout7"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="비밀번호 확인"
                android:textColor="@android:color/black"
                android:layout_weight="1.05" />

            <EditText
                android:id="@+id/PassEdit2"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.29"
                android:ems="10"
                android:gravity="center"
                android:hint="비밀번호를 확인하세요"
                android:inputType="textPassword"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout6"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1.05"
                android:gravity="center_vertical"
                android:text="이름"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/NameEdit"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.29"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                app:srcCompat="@drawable/whefe" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="회원가입"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="0.71"
                android:gravity="center_vertical"
                android:text="아이디"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/LIDEdit"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingEnd="10dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/IdCheckButton"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@drawable/mybutton"
                android:onClick="onSameIdClick"
                android:text="중복체크"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout4"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout8">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1.05"
                android:gravity="center_vertical"
                android:text="전화번호"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/PhoneEdit"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.29"
                android:ems="10"
                android:gravity="center"
                android:hint="- 을 빼고 입력해주세요"
                android:inputType="phone"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout8"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/GoButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:onClick="onClick"
                android:text="회원가입"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/border" />

    </RelativeLayout>

</RelativeLayout>

